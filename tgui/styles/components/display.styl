div.display
  width: 100%
  padding: 4px
  margin: 6px 0

  background-color: colors.display.background // Transparent background.
  box-shadow: inset 0 0 5px colors.display.shadow

  header
    display: block
    position: relative
    width: 100%
    padding: 0 4px
    margin-bottom: 6px

    border-bottom: 2px solid colors.rule.normal

    .buttonRight
      position: absolute
      bottom: 6px
      right: 4px

  article
    display: table
    width: 100%
    border-spacing: 4px 6px
