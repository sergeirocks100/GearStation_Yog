.bar
  display: inline-block
  position: relative
  top: 4px // Because this is an empty div, hack it so that it lines up.
  vertical-align: top
  box-sizing: border-box
  width: 100%
  height: 20px // Buttons are 22px, but look 20px because of their dark borders.
  margin: 1px
  padding: 1px

  border: 1px solid colors.normal
  background: colors.dark

  .barText
    @extend $fontReset
    position: absolute
    top: 1px
    right: 3px

  .barFill
    display: block
    height: 100%

    overflow: hidden

    transition: background-color 1s
    background-color: colors.normal
    &.good { background-color: colors.good }
    &.average { background-color: colors.average }
    &.bad { background-color: colors.bad }
    &.highlight { background-color: colors.highlight }
