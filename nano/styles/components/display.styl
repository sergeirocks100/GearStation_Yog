$cell
  display: inline-block
  margin: 0

article.display
  display: flex
  flex-flow: column nowrap
  width: auto
  padding: 4px
  margin: 6px 2px

  background-color: alpha(#000, 0.33) // Transparent background.
  box-shadow: inset 0 0 5px alpha(#000, 0.5)

  header
    padding-left: 4px
    margin-bottom: 6px

    border-bottom: 2px solid colors.rule

  table
    width: auto

    border-collapse: collapse

    &.grow
      width: 100%

  th,td
    @extend $fontReset
    vertical-align: top;
    padding: 4px 16px 4px 0;
    text-align: left;
  th
    color: colors.label
  td
    padding: 2px 2px 0 0;
    vertical-align: top;
