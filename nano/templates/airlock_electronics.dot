<article class="display">
	<section>
		{{? data.oneAccess}}
			{{=helper.link('One Required', 'unlock', {'access': 'one'})}}
		{{??}}
			{{=helper.link('All Required', 'lock', {'access': 'one'})}}
		{{?}}
		{{=helper.link('Reset', 'refresh', {'access': 'clear'})}}
	<section>
	<table class="grow">
		<thead>
			<tr>
				{{~ data.regions :region:i}}
					<th>
						<span class="highlight bold">{{=region.name}}</span>
					</th>
				{{~}}
			</tr>
		</thead>
		<tbody>
			<tr>
				{{~ data.regions :region:i}}
					<td>
						{{~ region.accesses :access:j}}
							{{=helper.link(access.name, access.req ? 'check-square-o' : 'square-o', {'access': access.id}, null, access.req ? 'selected' : null)}}
							<br />
						{{~}}
					</td>
				{{~}}
			</tr>
		</tbody>
	</table>
</article>
