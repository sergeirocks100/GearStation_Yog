<div class='display'>
  {{#if title}}
    <header>
      {{#if extraleft}}<div style='float:left'>{{yield left}}</div>{{/if}}
      <h3>{{title}}</h3>
      {{#if extraright}}<div style='float:right'>{{yield right}}</div>{{/if}}
    </header>
  {{/if}}
  <article>
    {{yield}}
  </article>
</div>
